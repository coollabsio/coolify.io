---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  canonicalUrl?: string;
  description?: string;
}

const {
  title,
  canonicalUrl,
  description = "Open-source alternative to Vercel, Heroku & Netlify. Self-host apps, databases & 280+ services on your own server.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link
      rel="icon"
      type="image/png"
      sizes="48x48"
      href="/android-launchericon-48-48.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="72x72"
      href="/android-launchericon-72-72.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="96x96"
      href="/android-launchericon-96-96.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="144x144"
      href="/android-launchericon-144-144.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/android-launchericon-192-192.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="512x512"
      href="/android-launchericon-512-512.png"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#ffc40d" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="Description" content={description} />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@coolifyio" />
    <meta name="twitter:title" content="Coolify" />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://cdn.coollabs.io/assets/coolify/og-image.png"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://coolify.io" />
    <meta property="og:title" content="Coolify" />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Coolify" />
    <meta
      property="og:image"
      content="https://cdn.coollabs.io/assets/coolify/og-image.png"
    />
    <title>{title}</title>
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <link rel="me" href="https://fosstodon.org/@andrasbacsai" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <Navigation />
    <main class="max-w-6xl mx-auto">
      <div class="text-center pt-12 md:pt-24">
        <slot />
      </div>
    </main>
    <Footer />
    <style is:global>
      html {
        font-family: "Inter", sans-serif;
      }
      .navbar-link {
        @apply text-white text-base hover:bg-coolgray-200 py-2 px-3 rounded flex items-center gap-2 transition-colors;
      }
      @media (max-width: 767px) {
        .navbar-link {
          @apply text-sm w-full text-left;
        }
      }
      .icon {
        @apply w-6 h-6;
      }
      .button {
        @apply bg-coolgray-300 hover:bg-coolgray-400 text-white px-4 py-2 text-base font-semibold leading-6 rounded;
      }

      @font-face {
        font-family: "Inter";
        font-style: normal;
        font-weight: 100 900;
        font-display: swap;
        src: url("/fonts/inter-latin-ext.woff2") format("woff2");
        unicode-range:
          U+0100-02BA, U+02BD-02C5, U+02C7-02CC, U+02CE-02D7, U+02DD-02FF,
          U+0304, U+0308, U+0329, U+1D00-1DBF, U+1E00-1E9F, U+1EF2-1EFF, U+2020,
          U+20A0-20AB, U+20AD-20C0, U+2113, U+2C60-2C7F, U+A720-A7FF;
      }
      @font-face {
        font-family: "Inter";
        font-style: normal;
        font-weight: 100 900;
        font-display: swap;
        src: url("/fonts/inter-latin.woff2") format("woff2");
        unicode-range:
          U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC,
          U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191, U+2193,
          U+2212, U+2215, U+FEFF, U+FFFD;
      }
    </style>

    <script
      defer
      data-domain="coolify.io"
      src="https://analytics.coollabs.io/js/script.tagged-events.js"></script>

    <script>
      const mobileMenuButton = document.getElementById("mobile-menu-button");
      const mobileMenu = document.getElementById("mobile-menu");

      function toggleMobileMenu() {
        mobileMenu?.classList.toggle("hidden");
        mobileMenu?.classList.toggle("flex");
      }

      mobileMenuButton?.addEventListener("click", toggleMobileMenu);

      mobileMenu?.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
          mobileMenu?.classList.add("hidden");
          mobileMenu?.classList.remove("flex");
        });
      });
    </script>
  </body>
</html>
