---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  canonicalUrl?: string;
  description?: string;
}

const {
  title,
  canonicalUrl,
  description = "Open-source alternative to Vercel, Heroku & Netlify. Self-host apps, databases & 280+ services on your own server.",
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="coollabs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link
      rel="icon"
      type="image/png"
      sizes="48x48"
      href="/android-launchericon-48-48.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="72x72"
      href="/android-launchericon-72-72.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="96x96"
      href="/android-launchericon-96-96.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="144x144"
      href="/android-launchericon-144-144.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/android-launchericon-192-192.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="512x512"
      href="/android-launchericon-512-512.png"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#ffc40d" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="Description" content={description} />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@coolifyio" />
    <meta name="twitter:title" content="Coolify" />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://cdn.coollabs.io/assets/coolify/og-image.png"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://coolify.io" />
    <meta property="og:title" content="Coolify" />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Coolify" />
    <meta
      property="og:image"
      content="https://cdn.coollabs.io/assets/coolify/og-image.png"
    />
    <title>{title}</title>
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <link rel="me" href="https://fosstodon.org/@andrasbacsai" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="bg-base-100">
    <Navigation />
    <main class="max-w-6xl mx-auto">
      <div class="text-center pt-12 md:pt-24">
        <slot />
      </div>
    </main>
    <Footer />

    <script
      defer
      data-domain="coolify.io"
      src="https://analytics.coollabs.io/js/script.tagged-events.js"></script>

    <script>
      const mobileMenuButton = document.getElementById("mobile-menu-button");
      const mobileMenu = document.getElementById("mobile-menu");

      mobileMenuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
      });
    </script>
  </body>
</html>
